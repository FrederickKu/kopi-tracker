<h1 class="mt-4 text-center">Add Order</h1>

<%= form_with scope: :order, url: orders_path, local: true, :class => "container mt-4" do |form| %>
    
    <div class="form-group">
        <%= form.label :kopi %><br>
        <%= form.collection_select :kopi_id, @kopis, :id, :name_with_price , {}, {:class => "form-control"} %>
    </div>

	<div class="form-group">
    	<%= form.label "Weight in kg" %><br>
    	<%= form.number_field :weight, {:step =>0.1, :class => "form-control"} %>
	</div>

 
    <%= form.submit "Add Order", :class => 'btn btn-dark' %>
 
<% end %>